{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2016",
        "module": "commonjs",
        "lib": ["DOM", "ES2016", "DOM.iterable"],
        "noImplicitAny": false,
        "jsx": "react",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist"
    },
    "files": [
        "src/index.ts"
    ]
}